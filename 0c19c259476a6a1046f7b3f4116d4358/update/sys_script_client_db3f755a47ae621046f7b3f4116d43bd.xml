        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
  if (isLoading || !newValue) return;

  var cleaned = newValue.trim();
  var fieldName = 'amount_to_be_loaded';

  // Accept up to 9 digits, optional dot, and up to 2 digits after
  var isValidAmount = /^\d{1,9}(\.\d{1,2})?$/.test(cleaned);

  if (!isValidAmount) {
    g_form.showFieldMsg(fieldName, 'Enter a valid number.', 'error');
  } else {
    g_form.hideFieldMsg(fieldName, true);
  }
}




